package myTry;

	public class ScopeDemo {
		static void a() {
			int i = 0;
      // 메서드 안에서만 사용할 수 있는 변수를 배움.
      // 그걸 유효성이라고 부름.
		}

		public static void main(String[] args) {
			// TODO Auto-generated method stub
			for (int i = 0; i < 5; i++) {
				a();
				System.out.println(i);
			}

		}
	}
